{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    // Base Settings
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "resolveJsonModule": true,

    // Strictness Settings
    "strict": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noUncheckedIndexedAccess": true,

    // Monorepo Settings
    "composite": true,
    "declaration": true,
    "declarationMap": true
  },

  "exclude": ["node_modules"]
}
