{
  "name": "@repo/generic-components",
  "private": true,
  "type": "module",
  "scripts": {
    "clean": "rimraf dist",
    "dev": "vite build --mode development --watch",
    "build": "vite build --mode production",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "main": "dist/index.cjs",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.es.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.es.js"
    },
    "./utilities": {
      "types": "./dist/utilities/index.d.ts",
      "import": "./dist/utilities/index.es.js",
      "require": "./dist/utilities/index.cjs",
      "default": "./dist/utilities/index.es.js"
    },
    "./icons": {
      "types": "./dist/icons/index.d.ts",
      "import": "./dist/icons/index.es.js",
      "require": "./dist/icons/index.cjs",
      "default": "./dist/icons/index.es.js"
    },
    "./styles.css": "./dist/index.css"
  },
  "sideEffects": [
    "**/*.css",
    "**/*.scss"
  ],
  "peerDependencies": {
    "react": "^19",
    "react-dom": "^19"
  },
  "devDependencies": {
    "@repo/config-typescript": "workspace:*",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/addon-links": "^8.6.14",
    "@storybook/blocks": "^8.6.14",
    "@storybook/preset-scss": "^1.0.3",
    "@storybook/react": "^8.6.14",
    "@storybook/react-vite": "^8.6.14",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^5.0.2",
    "clsx": "^2.1.1",
    "sass": "^1.91.0",
    "storybook": "^8.6.14",
    "typescript": "5.3.3",
    "vite": "^7.1.5",
    "vite-plugin-dts": "^4.5.4"
  },
  "dependencies": {
    "react-aria-components": "^1.12.1"
  }
}
