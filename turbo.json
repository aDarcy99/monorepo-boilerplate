{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "clean": {},
    "build": {
      "inputs": [".env*"],
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "deploy": {
      "dependsOn": ["^build"]
    }
  }
}
